<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springboot.dao.UserDao">
    <insert id="insertUser">
        INSERT INTO sys_user(name, password, type) VALUES(#{name}, #{password}, #{type})
    </insert>
    <update id="updateUser">
        UPDATE sys_user set password = #{password}, type = #{type} where name = #{name}
    </update>
    <delete id="deleteUser">
        DELETE from sys_user WHERE name = #{name}
    </delete>
    <select id="findAll" resultType="com.example.springboot.entity.User">
        SELECT * FROM sys_user
    </select>
    <select id="findById" resultType="com.example.springboot.entity.User">
        SELECT * FROM sys_user WHERE id = #{id}
    </select>
    <select id="findByUser" resultType="com.example.springboot.entity.User">
        SELECT * FROM sys_user WHERE name = #{name} AND password = #{password}
    </select>
    <select id="findPage" resultType="com.example.springboot.entity.User">
        SELECT * FROM sys_user LIMIT #{PageNumber}, #{pageSize}
    </select>
</mapper>